#!/bin/bash
#
# {{ ansible_managed }}
#
# /etc/init.d/cif-services -- startup script
#
### BEGIN INIT INFO
# Provides:          cif-services
# Required-Start:    $network $named
# Required-Stop:     $network $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts cif-services
# Description:       Starts cif-services using start-stop-daemon
### END INIT INFO

PATH=/bin:/usr/bin:/sbin:/usr/sbin
NAME=cif-services
DESC="cif-services"

CIF_SERVICES="cif-router cif-worker cif-starman cif-smrt"

if [ `id -u` -ne 0 ]; then
    echo "You need root privileges to run this script"
    exit 1
fi

. /lib/lsb/init-functions

if [ -r /etc/default/rcS ]; then
    . /etc/default/rcS
fi

case "$1" in
  start)
    for i in $CIF_SERVICES; do
    	service $i start
    done
    ;;      
  stop)
    for i in $CIF_SERVICES; do
    	service $i stop
    done
    ;;
  status)
    for i in $CIF_SERVICES; do
    	service $i status
    done
    ;;
  restart|force-reload)
    for i in $CIF_SERVICES; do
    	service $i restart
    done
    ;;
  *)
    log_success_msg "Usage: $0 {start|stop|restart|force-reload|status}"
    exit 1
    ;;
esac

exit 0
